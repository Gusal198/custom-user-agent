{
	"manifest_version": 2,
	"name": "Custom User-Agent",
	"version": "1.1",
	"icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_popup": "index.html"
	},
	"content_scripts": [
		{
			"all_frames": true,
			"run_at": "document_start",
			"js": [
				"content-scripts.js"
			],
			"matches": [
				"http://*/*",
        "https://*/*"
			]
		}
	],
	"permissions": [
		"storage",
		"<all_urls>",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"
	]
}
