{
	"manifest_version": 2,
	"name": "Custom User-Agent",
	"version": "1.0",
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_popup": "index.html"
	},
	"content_scripts": [
		{
			"all_frames": true,
			"run_at": "document_start",
			"js": [
				"script.js"
			],
			"matches": [
				"http://*/*",
        "https://*/*"
			]
		}
	],
	"permissions": [
		"storage",
		"<all_urls>",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"
	]
}